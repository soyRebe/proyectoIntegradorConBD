<%- include('./partials/header_shop.ejs') %>
  <main>
      <div class="container mt-5">
      <section class="row align-items-center mobile-collection">
        <picture class="col-12 col-sm-6 d-block d-sm-none">
            <img src="/assets/img/<%=item.image_front%>" alt="" />
        </picture>
        <article class="col-12 col-sm-6 mobile-collection order-1">
             <p class="card-title card-item__licence_item"><%= item.licence_name%></p>
             <h1 class="collection__title_item mb-3"><%= item.product_name%></h1>
             <p class="collection__text_item_item mb-3"><%= item.product_description%></p>
             <p class="collection_item_item_price"><%= item.product_price%></p>
            <form action="/shop/item/<%= item.product_id %>" method="POST">
                 <div class="row">
                    <div class="col-12 col-lg-4 d-flex">
                      <input class="form-control" type="text" name="quantity" id="quantity" min="1" value="1" />
                    </div>
                    <div class="col-12 col-lg-1 d-flex flex-wrap justify-content-center">
                      <button class="btn btn-secondary rounded-0 w-100 mb-1" type="button" id="agregar">+</button>
                      <button class="btn btn-secondary rounded-0 w-100" type="button" id="quitar">-</button>
                    </div>
                    <div class="col-12 col-lg-7">
                      <button class="btn btn-primary rounded-0 py-3 collection_item_item__button">Agregar al carrito</button>
                    </div>
                 </div>
            </form>
             <a class="collection_item_item_promo">Ver métodos de pago - 3 CUOTAS SIN INTERÉS</a>
            
             
            <!---<a class="collection__link mb-3 d-inline-block"href="pages/item.html">VER COLECCIÓN</a> -->
        </article>
        <picture class="col-12 col-sm-6 d-none d-sm-block order-0">
            <img src="/assets/img/<%=item.image_front%>" alt="" />
        </picture>
    </section>
    <div class="mt-4">
        <%- include('./components/slider.ejs') %>
    </div>
  </div>
  </main>
  <%- include('./partials/footer.ejs') %>