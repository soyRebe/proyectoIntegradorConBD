<%- include('./partials/header.ejs') %>
    <main class="container">
        <section class="py-3">
            <section class="row">
                <div class="col-12">
                    <div  <% if (message === 'ok')%> class="alert alert-success  alert-dismissible fade show fs-4" role="alert">
                       Producto agregado con éxito
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>

                </div>
            </section>
            <section class="row">
                <div class="col-12">
                    <div class="row">
                        <div class="col-12 col-lg-6 input-group w-50 mt-3">
                            <span class="input-group-text" id="basic-addon1"><iconify-icon icon="material-symbols:search" style="font-size: 24px;"></iconify-icon></span>
                            <input type="text" class="form-control"  placeholder="Buscar..." aria-describedby="basic-addon1">    
                        </div>
                    </div>
                    <section class="row pt-4">
                        <div class="col-12 col-lg-6">
                            <h4 class="form_login__title text-start text-uppercase fw-bold pt-0">Listado de Productos</h4>
                        </div>
                        <div class="col-12 col-lg-6 d-flex align-items-center justify-content-end">
                            <div class="d-flex align-items-center">
                                <a class="text-decoration-none" href="admin/create" target="_blank">
                                    <span class="form_login__label text-uppercase fw-bold">Agregar</span>
                                    <button class="btn btn-primary rounded-0 ms-2 mb-1"><iconify-icon icon="mdi:add-bold"></iconify-icon></button>
                                </a>
                            </div>
                        </div>
                    </section>
                    <div class="table-responsive">
                        <table class="table table-borderless">
                            <thead class="form_login__label">
                                <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">Código</th>
                                    <th scope="col">Nombre del Producto</th>
                                    <th scope="col">Categoria</th>
                                    <th scope="col"></th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody class="datos_tabla">
                                <tr>
                                    <% items.forEach(function(item) { %>
                                <th scope="row"><%=item.product_id %></th>
                                <td><%=item.sku %></td>
                                <td><%=item.product_name %></td>
                                <td><%=item.licence_name  %></td>
                                <td>
                                    <a class="text-decoration-none" href="admin/edit<%= items.product_id %>" target="_blank">
                                        <iconify-icon icon="ic:round-edit" class="icon_table_edit"></iconify-icon> 
                                    </a>
                                </td>
                                <td>
                                    <iconify-icon icon="material-symbols-light:delete"  class="icon_table_delete"></iconify-icon>

                                </tr>
                                <% }); %>
                            </tbody>
                        </table>

                    </div>
                </div>
            </section>
        </section>
    </main>
    <%- include('./partials/footer.ejs') %>